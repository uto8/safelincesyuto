<div class="row mb-5">
  <div class="col-6">
    <h2 class="font-weight-bold">社員一覧</h2>
  </div>
  <div class="col-6 text-right">
    <%= link_to "新規追加",new_admin_user_path,class:"btn btn-warning font-weight-bold" %>
  </div>
</div>
<%= render "shared/flash_message" %>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">名前</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">編集</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to "編集",edit_admin_user_path(user),class:"btn btn-warning font-weight-bold" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>
