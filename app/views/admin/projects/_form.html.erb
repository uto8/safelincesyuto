<%= form_with(model:@project, url:admin_projects_path, method: :post, local:true) do |f| %>
<%= render 'shared/error_messages', model: f.object %>
  <div class="card-body">
    <div class="form-group">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :date, "メールアドレス" %>
      <%= f.date_field :date, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :driver_id, "ドライバー" %>
      <%= f.collection_select :driver_id, User.all, :id, :name, {prompt: "ドライバーを選択してください"}, {class: 'form-control'} %>
    </div>
    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= f.label :start_time, "開始時間" %>
          <%= f.time_field :start_time, class:"form-control" %>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <%= f.label :end_time, "終了時間" %>
          <%= f.time_field :end_time, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :leader_id, "リーダー" %>
      <%= f.collection_select :leader_id, User.all, :id, :name, {prompt: "リーダーを選択してください"}, {class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :belongings, "持ち物" %>
      <%= f.text_field :belongings, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :address, "場所" %>
      <%= f.text_field :address, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :supplement, "備考" %>
      <%= f.text_area :supplement, class:"form-control" %>
    </div>
  </div>
  <div class="card-footer text-right">
    <%= f.submit "登録",class:"btn btn-primary" %>
  </div>
<%end%>
